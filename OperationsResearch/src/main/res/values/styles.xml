<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/window_background</item>
    </style>


    <style name="TitleListItem" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_primary_dark</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_marginTop">@dimen/view_margin</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">@dimen/list_view_margin</item>
        <item name="android:layout_marginRight">@dimen/list_view_margin</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="DescriptionListItem" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_secondary_dark</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">@dimen/view_margin</item>
        <item name="android:layout_marginLeft">@dimen/list_view_margin</item>
        <item name="android:layout_marginRight">@dimen/list_view_margin</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>

        <item name="android:layout_marginTop">@dimen/icon_margin</item>
        <item name="android:layout_marginBottom">@dimen/icon_margin</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>

        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Icon.Left">
        <item name="android:layout_marginLeft">@dimen/view_margin</item>
    </style>

    <style name="Icon.Right">
        <item name="android:layout_marginRight">@dimen/view_margin</item>
    </style>

</resources>
