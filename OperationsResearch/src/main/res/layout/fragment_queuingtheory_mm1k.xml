<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_size">

        <ImageView
                style="@style/Icon.Right"
                android:src="@drawable/lamda"/>

        <TextView
                style="@style/FormText.Center"
                android:text="@string/tasa_de_llegadas"/>

        <EditText
                android:id="@+id/tasaLlegadasEditText"
                style="@style/FormEditText.Left"
                android:inputType="numberDecimal"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_size">

        <ImageView
                style="@style/Icon.Right"
                android:src="@drawable/mu"/>

        <TextView
                style="@style/FormText.Center"
                android:text="@string/tasa_de_servicio"/>

        <EditText
                android:id="@+id/tasaServicioEditText"
                style="@style/FormEditText.Left"
                android:inputType="numberDecimal"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_size">

        <ImageView
                style="@style/Icon.Right"
                android:src="@drawable/k"/>

        <TextView
                style="@style/FormText.Center"
                android:text="@string/limite_del_sistema"/>

        <EditText
                android:id="@+id/limiteSistemaEditText"
                style="@style/FormEditText.Left"
                android:inputType="number"/>

    </LinearLayout>

</LinearLayout>