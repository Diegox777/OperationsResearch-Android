<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical"
              tools:context="com.danyalvarez.operationsresearch.MainActivity$PlaceholderFragment">

    <TextView
            android:id="@+id/section_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_secondary_dark"
            android:text="@string/credits_content"
            android:textSize="@dimen/text_size_small"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_color_tertiary_dark"
                android:textSize="@dimen/text_size_large"
                android:text="@string/daniel_alvarez"
                />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_color_primary_dark"
                android:textSize="@dimen/text_size_medium"
                android:text="@string/mi_web"
                />

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_size">

        <Button
                android:id="@+id/enviarCorreoButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/enviame_correo"
                android:textSize="@dimen/text_size_small"
                />

        <Button
                android:id="@+id/irWebButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/ir_web"
                android:textSize="@dimen/text_size_small"
                />

        <Button
                android:id="@+id/irGitHubButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/proyecto_github"
                android:textSize="@dimen/text_size_small"
                />

    </LinearLayout>

</LinearLayout>
